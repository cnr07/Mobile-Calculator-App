<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:orientation="vertical"
    android:background="#191824"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text="..."
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textSize="30sp"
            android:id="@+id/OperationsTextView"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:paddingRight="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:text=""
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:textSize="45sp"
            android:id="@+id/ResultTextView"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button

                android:backgroundTint="#9dc0eb"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/red"
                android:onClick="Clear"
                android:text="C"/>


            <Button
                android:backgroundTint="#9dc0eb"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/red"
                android:onClick="Delete"
                android:text="Del"/>


            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/orange"
                android:onClick="Division"
                android:text="/"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:onClick="Seven"
                android:text="7"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:onClick="Eight"
                android:text="8"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:onClick="Nine"
                android:text="9"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/orange"
                android:onClick="Multiply"
                android:text="X"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:onClick="Four"
                android:text="4"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:onClick="Five"
                android:text="5"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:onClick="Six"
                android:text="6"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/orange"
                android:onClick="E_value"
                android:text="e"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/orange"
                android:onClick="Minus"
                android:text="-"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:onClick="One"
                android:text="1"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="2"
                android:onClick="Two"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="3"
                android:onClick="Three"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/orange"
                android:text="Ï€"
                android:onClick="Pi_value"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/orange"
                android:text="+"
                android:onClick="Plus"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/orange"
                android:text="."
                android:onClick="Point"/>

            <Button
                android:backgroundTint="#444c54"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="0"
                android:onClick="Zero"/>


            <Button
                android:backgroundTint="#eb8613"
                android:alpha="0.50"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="30sp"
                android:background="@null"
                android:textColor="@color/white"
                android:text="="
                android:onClick="Equal"/>



        </LinearLayout>




    </LinearLayout>











</LinearLayout>